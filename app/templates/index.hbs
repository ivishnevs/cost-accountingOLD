<div class="row col-md-10 col-md-offset-1 jumbotron">

<div class="col-md-3 col-md-offset-1">
{{#if isCrFormShowing}}
<form class="form-horizontal">
  <fieldset>
    <legend>Create new article</legend>
    <div class="form-group">
      <label for="inputTitle" class="col-lg-2 control-label">Title</label>
      <div class="col-lg-10">
        <input class="form-control" id="inputTitle" placeholder="Title" type="text">
      </div>
    </div>
    <div class="form-group">
      <label for="inputParent" class="col-lg-2 control-label">Parent</label>
      <div class="col-lg-10">
        <input class="form-control" id="inputParent" placeholder="Parent" type="text">
      </div>
    </div>
  </fieldset>
    <button class="btn btn-primary" {{action "articleCreate"}}>Create</button>
    <button class="btn btn-default" {{action "crFormToggle"}}>Hide</button>
</form>
{{else}}
  <button class="btn btn-default" {{action "crFormToggle"}}>Create new article</button>
{{/if}}
</div>


<div class="col-md-4 " style="overflow: auto; height: 500px; border: 2px solid #6E6E6E; border-radius: inherit; padding: 5px;">
<ul>
    {{#each model as |articleUnit|}}
      {{#if articleUnit.isRoot}}
        {{recurcive-view article = articleUnit}}
      {{/if}}
    {{/each}}
</ul>
</div>

<div class="row">
  <div class="col-md-3" style="height: 200px;">
  {{#if isCostFormShowing}}
  <form class="form-horizontal">
    <fieldset>
      <legend>Add cost</legend>
      <div class="form-group">
        <label for="inputTitle2" class="col-lg-2 control-label">Title</label>
        <div class="col-lg-10">
          <input class="form-control" id="inputTitle2" placeholder="Title" type="text">
        </div>
      </div>
      <div class="form-group">
        <label for="inputCost" class="col-lg-2 control-label">Cost</label>
        <div class="col-lg-10">
          <input class="form-control" id="inputCost" placeholder="Cost" type="text">
        </div>
      </div>
    </fieldset>
      <button class="btn btn-primary" {{action "addCost"}}>Add</button>
      <button class="btn btn-default" {{action "costFormToggle"}}>Hide</button>
  </form>
  {{else}}
    <button class="btn btn-default" {{action "costFormToggle"}}>Add Cost</button>
  {{/if}}
  </div>
    <div class="col-md-3">
        {{pie-chart data=data}}
    </div>
</div>

</div>
